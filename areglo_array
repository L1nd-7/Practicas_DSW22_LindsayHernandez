fun main() {
    // Arreglo con 5 notas
    val notas = DoubleArray(5)

    // Asignar valores a cada posici√≥n del arreglo
    notas[0] = 7.5
    notas[1] = 8.0
    notas[2] = 6.5
    notas[3] = 9.0
    notas[4] = 7.0

    // Calcular el promedio
    var suma = 0.0
    for (nota in notas) {
        suma += nota
    }
    val promedio = suma / notas.size

    // Imprimir las notas y el promedio
    println("Notas de los estudiantes:")
    for (nota in notas) {
        println(nota)
    }

    println("Promedio de las notas: $promedio")
}
